{
  "compilerOptions": {
    "allowSyntheticDefaultImports":     true,
    "baseUrl":                          ".",
    "esModuleInterop":                  true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules":                  true,
    "module":                           "ESNext",
    "moduleResolution":                 "Node",
    "noFallthroughCasesInSwitch":       true,
    "noUnusedLocals":                   true,
    "strict":                           true,
    "strictPropertyInitialization":     false,
    "target":                           "ES2017",
    "lib":                              [
      "es5",
      "es6",
      "dom",
      "dom.iterable"
    ]
  },
  "include":         [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude":         [
    "node_modules"
  ]
}
